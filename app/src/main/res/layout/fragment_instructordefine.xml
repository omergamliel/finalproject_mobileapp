<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragements.Instructordefine_fragment">

    <!--פרגמנט הגדרת מדריך  -->

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <TextView
           android:id="@+id/Instructordefinetitle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="הגדרת מדריך"
           android:textSize="30sp"
           android:textStyle="bold"
           android:gravity="center"/>

       <Spinner
           android:id="@+id/instructordefinenames"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <Spinner
           android:id="@+id/instructordefinefields"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <Button
           android:id="@+id/instructordefinestartdate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="בחר תאריך התחלה"
           android:layout_gravity="center"/>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/activitiesRV"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
       <Button
           android:id="@+id/instructordefinesendbtn"
           android:text="שמירה"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"/>


   </LinearLayout>

</FrameLayout>